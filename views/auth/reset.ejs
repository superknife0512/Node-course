<%-include('../includes/header.ejs') %>
</head>
<%-include('../includes/navigation.ejs') %>
<main>
    <div class="container wraper">
        <div class="login">
            <h3 class="login__heading">Reset your password</h3>
            <hr>

            <% if(errorMess !='' && errorMess != undefined) { %>
                <div class="error-mess">                   
                    <h4> <i class="fas fa-exclamation-circle"></i> <%= errorMess %></h4>
                </div>
            <% } %>
            <form action="/reset" method="POST">
            
                <div class="form-group login__group">
                    <label for="name">Your email</label>
                    <input type="email" class="login__form form-control" name="email">
                </div>
               
                <button class="btn btn-danger" type="submit">Reset password</button>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>

        </div>
    </div>
</main>

<%-include('../includes/end.ejs') %>